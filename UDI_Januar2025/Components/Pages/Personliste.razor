@page "/personer"
@inject IDataLesService dataLesService
@inject NavigationManager nav

<PageTitle>Personer</PageTitle>

<h3><i class="bi bi-person"></i> Personer</h3>

@if (personer == null)
{
    <Loading />
}
else
{
    <div class="row py-1 fw-bold">
        <div class="col-2">Personnummer</div>
        <div class="col-2">Navn</div>
        <div class="col-2">Mobilnummer</div>
        <div class="col-2">E-postadresse</div>
    </div>

    @foreach (var person in personer)
    {
        <div class="row py-1 list-row" @onclick="(() => NavigateToPersondetaljer(person.Personnummer))">
            <div class="col-2">@person.Personnummer</div>
            <div class="col-2">@person.FulltNavn</div>
            <div class="col-2">Mobilnummer</div>
            <div class="col-2">E-postadresse</div>
        </div>
    }
}

@code {
    private List<PersonDto>? personer;

    protected override async Task OnInitializedAsync()
    {
        personer = await dataLesService.HentAllePersoner();
    }

    private void NavigateToPersondetaljer(string personnummer)
    {
        nav.NavigateTo($"person/{personnummer}");
    }
}
